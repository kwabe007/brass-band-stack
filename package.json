{
  "name": "blues-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:envfile": "esbuild --platform=node --format=cjs ./load-envs.ts --outfile=build/load-envs.js",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "create-admin": "node scripts/create-admin-user.js",
    "dev": "npm run node-rm build && cross-env NODE_ENV=development run-p dev:* build:envfile",
    "dev:build": "npm run build:server -- --watch",
    "dev:remix": "remix watch",
    "dev:server": "npm run wait-build && node -r ./mocks -r dotenv/config -r ./build/load-envs.js ./build/server.js",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "remix-esbuild-override",
    "node-rm": "node scripts/node-rm.js",
    "start": "cross-env NODE_ENV=production node -r ./build/load-envs.js ./build/server.js",
    "start:staging": "cross-env NODE_ENV=production node -r ./mocks -r dotenv/config -r ./build/load-envs.js ./build/server.js",
    "test": "vitest",
    "test:e2e:command": "cross-env NODE_ENV=production npx ts-node -r tsconfig-paths/register -r dotenv/config -r ./build/load-envs.js",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:staging http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "wait-build": "wait-on -t 20000 ./build/server.js ./build/index.js ./build/load-envs.js"
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@isaacs/express-prometheus-middleware": "^1.2.1",
    "@prisma/client": "^4.11.0",
    "@remix-run/express": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/server-runtime": "*",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "isbot": "^3.6.7",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "prompt-sync": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@testing-library/cypress": "^8.0.7",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.21.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/wait-on": "^5.3.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "autoprefixer": "^10.4.14",
    "c8": "^7.13.0",
    "cookie": "^0.5.0",
    "cypress": "^10.11.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.11",
    "esbuild-sass-plugin": "^2.9.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-cypress": "^2.12.1",
    "happy-dom": "^8.9.0",
    "msw": "^0.49.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "prisma": "^4.11.0",
    "remix-esbuild-override": "^3.1.0",
    "start-server-and-test": "^1.15.4",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.29.3",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
